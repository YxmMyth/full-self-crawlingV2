# Zhipu AI API Key
# Get your API key from: https://open.bigmodel.cn/usercenter/proj-mgmt/apikeys
ZHIPU_API_KEY=your_api_key_here

# ============================================================================
# Quality Evaluation Configuration
# ============================================================================

# Quality threshold (0.0-1.0)
# Samples with quality score below this threshold will trigger code regeneration
QUALITY_THRESHOLD=0.6

# Maximum SOOAL iterations
# Maximum number of code repair attempts before generating a final report
MAX_SOOL_ITERATIONS=6

# ============================================================================
# Image Validation Options
# ============================================================================

# Enable image validation
# Set to 'true' to validate image URLs and detect placeholder images
VALIDATE_IMAGES=true

# Check image accessibility
# Set to 'true' to make actual HTTP requests to verify image URLs (slower)
# WARNING: This will significantly increase verification time
CHECK_IMAGE_ACCESSIBILITY=false

# ============================================================================
# Content Validation Options
# ============================================================================

# Check for duplicate records
# Set to 'true' to detect and report duplicate entries
CHECK_DUPLICATES=true

# Validate URL formats
# Set to 'true' to validate URL format correctness
VALIDATE_URLS=true

# Validate date formats
# Set to 'true' to validate date format correctness
VALIDATE_DATES=true

# ============================================================================
# Deep Validation Options（深度验证选项）
# ============================================================================

# Enable deep validation
# Set to 'true' to enable deep validation of binary content (images, PDFs, videos)
# WARNING: This will download and validate actual content, increasing time
# Default: false (disabled for faster execution)
ENABLE_DEEP_VALIDATION=false

# Maximum number of images to validate
# Limits the number of images validated to control execution time
# Default: 3
MAX_IMAGES_TO_VALIDATE=3

# Minimum image resolution requirement
# Format: WIDTHxHEIGHT (e.g., 1920x1080 for Full HD)
# Images below this resolution will be flagged as low quality
# Default: 1920x1080
MIN_IMAGE_RESOLUTION=1920x1080

# PDF validation enabled
# Set to 'true' to validate PDF content (page count, text extraction)
# Default: true
PDF_VALIDATION_ENABLED=true

# Video validation enabled
# Set to 'true' to validate video links accessibility
# Default: false
VIDEO_VALIDATION_ENABLED=false

# CLIP relevance threshold
# Threshold for image-text relevance score (0.0-1.0)
# Images with score below this threshold will be flagged as irrelevant
# Default: 0.3
CLIP_RELEVANCE_THRESHOLD=0.3

# ============================================================================
# Vision API Configuration（预留，Vision API 集成）
# ============================================================================

# Vision API provider
# Options: none | openai | aliyun | tencent
# Default: none (disabled)
VISION_API_PROVIDER=none

# Enable Vision API
# Set to 'true' to enable external Vision API for image analysis
# Default: false
ENABLE_VISION_API=false

# Vision model to use
# - For OpenAI: gpt-4o, gpt-4-vision-preview
# - For Aliyun: qwen3-omni-flash, qwen3.5-plus, qwen3.5-max
# Default: gpt-4o
VISION_MODEL=gpt-4o

# OpenAI API Key (for Vision API)
# Required when VISION_API_PROVIDER=openai
OPENAI_API_KEY=

# Aliyun API Key (for Vision API)
# Required when VISION_API_PROVIDER=aliyun
# Get your API key from: https://dashscope.aliyun.com/
ALIYUN_API_KEY=

# Aliyun region endpoint
# Beijing: https://dashscope.aliyuncs.com/compatible-mode/v1
# Singapore: https://dashscope-intl.aliyuncs.com/compatible-mode/v1
# Default: Singapore
ALIYUN_BASE_URL=https://dashscope-intl.aliyuncs.com/compatible-mode/v1

# ============================================================================
# Sandbox Configuration
# ============================================================================

# Use Docker for code execution
# Set to 'true' to use Docker sandbox, 'false' for local execution
USE_DOCKER=false
