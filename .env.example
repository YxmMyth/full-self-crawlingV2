# Zhipu AI API Key
# Get your API key from: https://open.bigmodel.cn/usercenter/proj-mgmt/apikeys
ZHIPU_API_KEY=your_api_key_here

# ============================================================================
# Quality Evaluation Configuration
# ============================================================================

# Quality threshold (0.0-1.0)
# Samples with quality score below this threshold will trigger code regeneration
QUALITY_THRESHOLD=0.6

# Maximum SOOAL iterations
# Maximum number of code repair attempts before generating a final report
MAX_SOOL_ITERATIONS=6

# ============================================================================
# Image Validation Options
# ============================================================================

# Enable image validation
# Set to 'true' to validate image URLs and detect placeholder images
VALIDATE_IMAGES=true

# Check image accessibility
# Set to 'true' to make actual HTTP requests to verify image URLs (slower)
# WARNING: This will significantly increase verification time
CHECK_IMAGE_ACCESSIBILITY=false

# ============================================================================
# Content Validation Options
# ============================================================================

# Check for duplicate records
# Set to 'true' to detect and report duplicate entries
CHECK_DUPLICATES=true

# Validate URL formats
# Set to 'true' to validate URL format correctness
VALIDATE_URLS=true

# Validate date formats
# Set to 'true' to validate date format correctness
VALIDATE_DATES=true

# ============================================================================
# Sandbox Configuration
# ============================================================================

# Use Docker for code execution
# Set to 'true' to use Docker sandbox, 'false' for local execution
USE_DOCKER=false
